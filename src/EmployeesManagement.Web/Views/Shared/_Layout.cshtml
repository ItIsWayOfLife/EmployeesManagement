<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item font-weight-bold">
                        @if ((Context.Request.Path.ToString() == "/" || Context.Request.Path.ToString().ToLower().Contains("home"))
                            && !Context.Request.Path.ToString().ToLower().Contains("privacy"))
                        {
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">Управление персоналом</a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Управление персоналом</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (Context.Request.Path.ToString().ToLower().Contains("employee"))
                        {
                            <a class="nav-link active" asp-controller="Employee" asp-action="Index">Работники</a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Employee" asp-action="Index">Работники</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (Context.Request.Path.ToString().ToLower().Contains("company"))
                        {
                            <a class="nav-link active" asp-controller="Company" asp-action="Index">Компании</a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Company" asp-action="Index">Компании</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (Context.Request.Path.ToString().ToLower().Contains("legalform"))
                        {
                            <a class="nav-link active" asp-controller="LegalForm" asp-action="Index">Орг-прав формы</a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="LegalForm" asp-action="Index">Орг-прав формы</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (Context.Request.Path.ToString().ToLower().Contains("position"))
                        {
                            <a class="nav-link active" asp-controller="Position" asp-action="Index">Должности</a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Position" asp-action="Index">Должности</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (Context.Request.Path.ToString().ToLower().Contains("activity"))
                        {
                            <a class="nav-link active" asp-controller="Activity" asp-action="Index">Виды деятельности</a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Activity" asp-action="Index">Виды деятельности</a>
                        }
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div style="margin-top: 5%; margin-bottom: 5%;" class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Управление персоналом - <a asp-area="" asp-controller="Home" asp-action="Privacy">Политика конфиденциальности</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
