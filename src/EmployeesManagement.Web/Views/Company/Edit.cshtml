@model EmployeesManagement.Web.Models.Company.EditCompanySelectListViewModel

@{
    ViewBag.Title = "Изменение компании";
}

<div class="row mb-5">
    <div class="col-6 m-auto">
        <div class="card m-auto">
            <div class="card-header">
                <h3>Изменение компании</h3>
            </div>
            <div class="card-body">

                <form method="post" asp-action="Edit" enctype="multipart/form-data">

                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <input type="hidden" asp-for="EditCompanyViewModel.Id" />

                    <div class="form-group col-12">
                        <label asp-for="EditCompanyViewModel.Name"></label>
                        <span class="text-danger" asp-validation-for="EditCompanyViewModel.Name"></span><br />
                        <input class="form-control" asp-for="EditCompanyViewModel.Name" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="EditCompanyViewModel.LegalFormName"></label>
                        <span class="text-danger" asp-validation-for="EditCompanyViewModel.LegalFormName"></span><br />
                        <select class="form-control" asp-items="Model.LegalForms" asp-for="EditCompanyViewModel.LegalFormName"></select>
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="EditCompanyViewModel.ActivityName"></label>
                        <span class="text-danger" asp-validation-for="EditCompanyViewModel.ActivityName"></span><br />
                        <select class="form-control" asp-items="Model.Activities" asp-for="EditCompanyViewModel.ActivityName"></select>
                    </div><br />

                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-primary">Изменить</button>
                        <a asp-action="Index" class="btn btn-warning">Назад</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>