@model EmployeesManagement.Web.Models.Employee.EditEmployeeSelectListViewModel

@{
    ViewBag.Title = "Изменение сотрудника";
}

<div class="row mb-5">
    <div class="col-6 m-auto">
        <div class="card m-auto">
            <div class="card-header">
                <h3>Изменение сотрудника</h3>
            </div>
            <div class="card-body">

                <form method="post" asp-action="Edit" enctype="multipart/form-data">

                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <input type="hidden" asp-for="EditEmployeeViewModel.Id" />

                    <div class="form-group col-12">
                        <label asp-for="EditEmployeeViewModel.Firstname"></label>
                        <span class="text-danger" asp-validation-for="EditEmployeeViewModel.Firstname"></span><br />
                        <input class="form-control" asp-for="EditEmployeeViewModel.Firstname" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="EditEmployeeViewModel.Secondname"></label>
                        <span class="text-danger" asp-validation-for="EditEmployeeViewModel.Secondname"></span><br />
                        <input class="form-control" asp-for="EditEmployeeViewModel.Secondname" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="EditEmployeeViewModel.Middlename"></label>
                        <span class="text-danger" asp-validation-for="EditEmployeeViewModel.Middlename"></span><br />
                        <input class="form-control" asp-for="EditEmployeeViewModel.Middlename" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="EditEmployeeViewModel.DateEmployment"></label>
                        <span class="text-danger" asp-validation-for="EditEmployeeViewModel.DateEmployment"></span><br />
                        <input type="date" class="form-control" asp-for="EditEmployeeViewModel.DateEmployment" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="EditEmployeeViewModel.CompanyName"></label>
                        <span class="text-danger" asp-validation-for="EditEmployeeViewModel.CompanyName"></span><br />
                        <select class="form-control" asp-items="Model.Companies" asp-for="EditEmployeeViewModel.CompanyName"></select>
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="EditEmployeeViewModel.PositionName"></label>
                        <span class="text-danger" asp-validation-for="EditEmployeeViewModel.PositionName"></span><br />
                        <select class="form-control" asp-items="Model.Positions" asp-for="EditEmployeeViewModel.PositionName"></select>
                    </div><br />

                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-primary">Изменить</button>
                        <a asp-action="Index" class="btn btn-warning">Назад</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>